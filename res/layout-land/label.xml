<AbsoluteLayout android:id="@+id/AbsoluteLayout01"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:paddingTop="10dip">


	<ScrollView android:id="@+id/widget54" android:layout_width="fill_parent"
		android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
		<LinearLayout android:layout_height="wrap_content"
			android:id="@+id/LinearLayout01" android:orientation="vertical"
			android:layout_width="fill_parent" android:layout_y="30dip">

			<TextView
				android:text="Please select the label below. \nOrange means current activity"
				android:layout_height="wrap_content" android:id="@+id/textview_note"
				android:layout_width="fill_parent" android:duplicateParentState="true"
				android:gravity="center" android:layout_y="15dip"></TextView>
			<TextView android:text="" android:id="@+id/TextView01"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>

			<CheckBox android:text="Stationary" android:id="@+id/StationaryCheckBox"
				android:layout_width="fill_parent" android:layout_height="wrap_content"></CheckBox>
			<TextView android:text="" android:id="@+id/TextView01"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
			<CheckBox android:text="Walking" android:id="@+id/WalkingCheckBox"
				android:layout_width="fill_parent" android:layout_height="wrap_content"></CheckBox>
			<TextView android:text="" android:id="@+id/TextView01"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
			<CheckBox android:text="Running" android:id="@+id/RunningBox"
				android:layout_width="fill_parent" android:layout_height="wrap_content"></CheckBox>
			<TextView android:text="" android:id="@+id/TextView01"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
			<CheckBox android:text="Driving" android:id="@+id/DrivingBox"
				android:layout_width="fill_parent" android:layout_height="wrap_content"></CheckBox>
			<TextView android:text="" android:id="@+id/TextView01"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
			<CheckBox android:text="Talking" android:id="@+id/TalkingBox"
				android:layout_width="fill_parent" android:layout_height="wrap_content"></CheckBox>
		</LinearLayout>

	</ScrollView>

</AbsoluteLayout>
